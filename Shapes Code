package shapes;

//Third draft on October 23, 2018 (7:00pm)
import java.util.Scanner;
public class Shapes {

double length;
double width; 

public Shapes () {
    this.length= 0;
    this.width= 0;
}

//Method to allow for user input

public double getValue (String instruction) {
    Scanner input = new Scanner(System.in);
    double num; 
//Error handler for numbers below 0    
    while (true) {
        System.out.print(instruction);
        num= input.nextDouble();
        if (num>0){
            break;
        }
        else {
            System.out.println ("Invalid entry!");
        }
    }
    return num;
}

public void input() {
    System.out.println ("Enter a numeric value for the length and width.");
    System.out.println ("The number needs to be above ZERO!");
    this.length=getValue("Length: ");
    this.width=getValue("Width: ");
}

//Method to find area of rectangle
public double area() {
    double area= length*width;
    return area;
}
//Method to find perimeter of rectangle
public double perimeter() {
    double peri= 2*length+2*width;
    return peri;
}
//Method that displays the calculation to the user
public void result() {
    System.out.println ("The area of the rectangle is "+area());
    System.out.println("The perimeter of the rectangle is "+perimeter());
}
//Initiall the statements here are to test the methods
    public static void main(String[] args) {
        Shapes rec= new Shapes();
        rec.input();
        rec.result();
    }
    
}
